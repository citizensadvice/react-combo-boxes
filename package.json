{
  "name": "@citizensadvice/react-combo-boxes",
  "version": "2.6.0",
  "description": "A combo box implementations in React",
  "license": "ISC",
  "author": "Daniel Lewis",
  "main": "dist/index.js",
  "source": "src/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./spec-helpers": "./dist/spec_helpers/index.js",
    "./helpers": "./dist/helpers/index.js"
  },
  "files": [
    "dist/**/*",
    "styles/**/*"
  ],
  "scripts": {
    "build:js": "rm -rf dist && swc ./src -d dist",
    "prebuild": "rm -rf .gh-pages",
    "build": "parcel build ./examples/index.pug",
    "start": "parcel ./examples/index.pug",
    "lint:js": "eslint . --ext .js --ext .jsx --max-warnings=0",
    "lint:scss": "stylelint \"**/*.scss\" --max-warnings=0",
    "lint": "npm run lint:js && npm run lint:scss",
    "test": "jest",
    "predeploy": "npm run lint",
    "deploy": "npm run build -- --public-url \"/react-combo-boxes/\" --no-cache && gh-pages -d .gh-pages",
    "preversion": "npm run lint",
    "prepublishOnly": "npm run build:js",
    "postpublish": "npm run deploy",
    "release": "npx np --any-branch"
  },
  "devDependencies": {
    "@parcel/resolver-glob": "^2.9.2",
    "@parcel/transformer-pug": "^2.9.2",
    "@parcel/transformer-sass": "^2.9.2",
    "@swc/cli": "^0.1.62",
    "@swc/jest": "^0.2.26",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.42.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^5.0.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.11.0",
    "gh-pages": "^5.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "marked": "^5.1.0",
    "node-emoji": "^1.11.0",
    "normalize.css": "^8.0.1",
    "parcel": "^2.9.2",
    "postcss": "^8.4.24",
    "prismjs": "^1.29.0",
    "process": "^0.11.10",
    "prop-types": "^15.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^15.7.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-scss": "^5.0.1"
  },
  "peerDependencies": {
    "@testing-library/user-event": ">= 4.0.0",
    "prop-types": ">= 15",
    "react": ">= 16.8"
  },
  "peerDependenciesMeta": {
    "@testing-library/user-event": {
      "optional": true
    }
  },
  "dependencies": {
    "marked-highlight": "^2.0.1",
    "shallow-equal": "^3.1.0"
  },
  "sideEffects": false,
  "targets": {
    "main": false,
    "default": {
      "distDir": ".gh-pages"
    }
  },
  "np": {
    "yarn": false
  }
}
