{
  "name": "@citizensadvice/react-combo-boxes",
  "version": "1.3.2",
  "description": "A combo box implementations in React",
  "license": "ISC",
  "author": "Daniel Lewis",
  "main": "dist/index.js",
  "source": "src/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./spec-helpers": "./dist/spec_helpers/index.js",
    "./helpers": "./dist/helpers/index.js"
  },
  "files": [
    "dist/**/*",
    "styles/**/*"
  ],
  "scripts": {
    "build:js": "rm -rf dist && swc ./src -d dist",
    "prebuild": "rm -rf docs",
    "build": "parcel build ./examples/index.pug --dist-dir docs",
    "start": "parcel ./examples/index.pug",
    "lint:js": "eslint . --ext .js --ext .jsx",
    "lint:scss": "stylelint \"**/*.scss\"",
    "lint": "npm run lint:js && npm run lint:scss",
    "test": "jest",
    "predeploy": "npm run lint",
    "deploy": "npm run build -- --public-url \"/react-combo-boxes/\" && gh-pages -d docs",
    "preversion": "npm run lint",
    "prepublishOnly": "npm run build:js",
    "postpublish": "npm run deploy",
    "release": "np"
  },
  "devDependencies": {
    "@parcel/resolver-glob": "^2.6.2",
    "@parcel/transformer-pug": "^2.6.2",
    "@parcel/transformer-sass": "^2.6.2",
    "@swc/cli": "^0.1.57",
    "@swc/jest": "^0.2.21",
    "@testing-library/dom": "^8.7.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.5.1",
    "gh-pages": "^4.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "marked": "^4.0.17",
    "node-emoji": "^1.11.0",
    "normalize.css": "^8.0.1",
    "np": "^7.6.2",
    "parcel": "^2.6.2",
    "postcss": "^8.4.14",
    "prismjs": "^1.25.0",
    "process": "^0.11.10",
    "prop-types": "^15.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-scss": "^4.2.0"
  },
  "peerDependencies": {
    "prop-types": ">= 15",
    "react": ">= 16.8"
  },
  "dependencies": {
    "shallow-equal": "^1.2.1"
  },
  "optionalDependencies": {
    "@testing-library/user-event": ">= 4.0.0"
  },
  "sideEffects": false,
  "np": {
    "yarn": false
  }
}
